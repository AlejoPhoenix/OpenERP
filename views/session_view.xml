<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
     <!-- Creo la vista Formulario para Session 
        -->   
        <record model="ir.ui.view" id="session_form_view">
          <field name="name">session.form</field>
          <field name="model">openacademy.session</field>
          <field name="arch" type="xml">
            <form string="Course Form" version="7.0">
              <sheet>
                  <label for="name"/>
                  <h1><field name="name"/></h1>
                    <group colspan="4">
                      <group cols="2">
                          <field name="instructor_id"/>
                          <field name="start_date"/>
                          <field name="duration"/>
                          <field name="hours"/>
                          <field name="end_date"/>
                          <field name="seats" on_change="onchange_taken_seats(seats,attendee_ids)"/>
                          <field name="taken_seats_percent" widget="progressbar"/>
                      </group>
                      <group cols="2">
                          <field name="active"/>                    
                          <field name="course_id"/>
                      </group>
                    </group>
                    <field name="attendee_ids" on_change="onchange_taken_seats(seats,attendee_ids)">
                        <tree string="Attendees" editable="top">
                            <field name="partner_id"/>
                        </tree>
                    </field>
              </sheet>
            </form>
          </field>
        </record>
     <!-- Creo la vista Tree para Session 
        -->   

        <record model="ir.ui.view" id="session_tree_view">
          <field name="name">session.tree</field>
          <field name="model">openacademy.session</field>
          <field name="arch" type="xml">
            <tree string="Session Tree" colors="#0000ff:duration&lt;5;red:duration&gt;15">
              <field name="name" />
              <field name="course_id" />
              <field name="duration" />
              <field name="instructor_id"/>
              <field name="taken_seats_percent"  widget="progressbar"/>
            </tree>
          </field>
        </record>
      <!-- Creo la vista Calendar para Session
        -->   
        <record model="ir.ui.view" id="session_calendar_view">
          <field name="name">session.calendar</field>
          <field name="model">openacademy.session</field>
          <field name="arch" type="xml">
            <calendar string="Session Calendar" date_start="start_date" date_stop="end_date" color="instructor_id">
              <field name="name" />
              <field name="course_id" />
              <field name="duration" />
              <field name="instructor_id"/>
              <field name="taken_seats_percent"  widget="progressbar"/>
            </calendar>
          </field>
        </record>
              <!-- Creo la vista Gantt para Session
        -->   
        <record model="ir.ui.view" id="session_gantt_view">
          <field name="name">session.gantt</field>
          <field name="model">openacademy.session</field>
          <field name="arch" type="xml">
            <gantt string="Session Gantt" date_start="start_date" date_delay="hours" color="instructor_id">
              <level object="res.partner" link="instructor_id">
                <field name="name" />
              </level>
              <!--<field name="instructor_id" String="Category Session" context="{'group_by':'instructor_id'}"/>
              -->
            </gantt>
          </field>
        </record>

     <!-- Creo la accion para Session
        -->   
        <record model="ir.actions.act_window" id="session_list_action">
          <field name="name">Sessions</field>
          <field name="res_model">openacademy.session</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form,calendar,gantt</field>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first session</p>
          </field>
          <field name="context">{'search_default_group_instructor_id':1}</field>
        </record>
     <!-- Creo El Menu de Cursos
        -->   
        <menuitem name="Sessions" id="menu_session" parent="main_menu_manage"
                  action="session_list_action"/>
    </data>
</openerp>